<context:include-filter type="annotation" 
                   expression="com.sonat.blog.controller.rest.filter.ValidateMethod" /> 
 	<context:include-filter type="annotation" 
                   expression="com.sonat.blog.controller.rest.filter.AllowCORS" /> 
</context:component-scan>
 -->

<mvc:resources mapping="/resources/**" location="/WEB-INF/resources/themes/"  
	cache-period="31556926"/>

<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
	<property name="prefix" value="/WEB-INF/views/"/>
	<property name="suffix" value=".jsp"/>
</bean>
<bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
	<property name="basename" value="messages"/>
</bean>
<bean id="validator" class="org.springframework.validation.beanvalidation.LocalValidatorFactoryBean">
	<property name="validationMessageSource" ref="messageSource"/>
</bean>

  <import resource="springmvc-resteasy.xml"/>
  <import resource="spring-web-blog.xml"/>
  <import resource="spring-web-security.xml"/>
</beans>
